<div class="container mx-auto bg-gray-100 pb-10">
  <div class="img-show-post" style="background-image: url('<%= @post.image.url%>;')">
    <h1 class="text-center text-6xl font-bold capitalize text-gray-900 bg-blue-400 bg-opacity-50">
      <%= @post.title %>
    </h1>
  </div>
  <div class="w-full md:w-3/4 mx-auto py-8 px-4 text-justify text-2xl">
    <%= @post.body.gsub(/\n/, '<br>').html_safe %>  
  </div>
  <!-- <hr class="border-red-300" /> -->
  <div class="w-full md:w-2/4 mx-auto py-8 px-3 text-justify text-2xl shadow-2xl">
    <h3 class="text-center mb-6 text-red-400 font-semibold">
      Post Comments:
    </h3>
      <% @post.comments.each do |c| %>
        <div class="py-1 px-2 md:px-8 w-full flex flex-row justify-start">
          <div class="w-8">
            <svg class="w-6 h-6 text-red-200 hover:text-red-300 "xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M224 256c70.7 0 128-57.31 128-128s-57.3-128-128-128C153.3 0 96 57.31 96 128S153.3 256 224 256zM274.7 304H173.3C77.61 304 0 381.6 0 477.3c0 19.14 15.52 34.67 34.66 34.67h378.7C432.5 512 448 496.5 448 477.3C448 381.6 370.4 304 274.7 304z"/></svg>
          </div>
          <div class="w-3/4 text-gray-500 text-justify"><%= c.body %></div>
        </div>
      <% end%>
    
    <div class="py-8 py-4 px-6 mt-6 mb-10 bg-white rounded-lg">
      <%= render 'comment_form', post: @post %>
      <div class="flex flex-row justify-between py-8 mt-8">
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-blue mx-3" %>
        <% end -%>
        <%= link_to 'Back', posts_path, class: "btn btn-outline-pink" %>
      </div>
    </div>
  </div>
</div>







