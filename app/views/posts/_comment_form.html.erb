<%= form_with(model: [@post, @comment], local: true) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class: "input-field", rows: 2 %>
  </div>

  <div class="actions text-right bg-white">
    <%= form.submit "Add comment", class: "btn btn-outline-pink"%>
  </div>
<% end %>
