          <a href="/" class="flex items-center py-4 px-2 hover:text-gray-800 hover:bg-red-100 transition duration-300">
            <img src="<%= image_path('cat-icon.svg')%>" alt="Logo" class="h-8 w-8 mr-2">
            <span class="font-semibold text-gray-500 text-lg">Cat Blog</span>
          </a>
        </div>
        <!-- Primary Navbar items -->
        <div class="hidden md:flex items-center space-x-1">
          <%= link_to 'Home', posts_path, :class => "py-4 px-2 text-green-500 border-b-4 border-red-300 font-semibold hover:text-gray-800 hover:bg-red-200 transition duration-300" %>
          <% if user_signed_in? %>
